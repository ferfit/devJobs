<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>
        
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" placeholder="empresa que contrata" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label for="">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Argentina" value="{{vacante.ubicacion}}" required>
        </div>

        <div class="campo">
            <label for="">Salario</label>
            <input type="text" name="salario" placeholder="Ej: 500 USD" value="{{vacante.salario}}" required>
        </div>
        
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contrato" id="">
                {{#tipoContrato vacante.contrato}} {{!-- helpers --}}
                <option value="" disabled selected> </option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripcion del puesto</h3>

        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x">

            </trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <input type="hidden" name="skills" id="skills">
        <div class="campo centrar-horizontal">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">

        </div>
        
        

    </form>
</main>