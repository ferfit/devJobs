<main class="contenedor">
    <form action="/vancates/nueva" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" required>
        </div>
        
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" placeholder="empresa que contrata" required>
        </div>

        <div class="campo">
            <label for="">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Argentina" required>
        </div>

        <div class="campo">
            <label for="">Salario</label>
            <input type="text" name="salario" placeholder="Ej: 500 USD" required>
        </div>
        
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contrato" id="">
                <option value="" disabled selected>-- Selecciona -- </option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>

        <h3>Descripcion del puesto</h3>

        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Publicar" class="btn btn-azul">

        </div>
        
        

    </form>
</main>