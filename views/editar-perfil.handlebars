<div class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" value="{{usuario.nombre}}" placeholder="Tu nombre">
        </div>
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="text" name="email" value="{{usuario.email}}" placeholder="Tu email">
        </div>
        <div class="campo">
            <label for="contraseña">Password</label>
            <input type="text" name="password" placeholder="Tu contraseña">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</div>